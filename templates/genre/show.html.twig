{% extends 'base.html.twig' %}

{% block title %}Genre{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Style personnalisé */
        .container {
            max-width: 800px;
            margin-top: 40px;
        }
        .table th {
            background-color: #f8f9fa;
            color: #495057;
        }
        .table td {
            font-size: 1.1rem;
        }
        .table {
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        h1 {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;
        }
        .action-links a {
            text-decoration: none;
            margin-right: 15px;
            font-size: 1.1rem;
        }
        .action-links a:hover {
            text-decoration: underline;
        }
        .btn-custom {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 1rem;
        }
        .btn-custom:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Genre</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ genre.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ genre.nom }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ genre.description }}</td>
                </tr>
            </tbody>
        </table>

        <div class="action-links text-center">
            <a href="{{ path('app_genre_index') }}" class="btn-custom">Retour à la liste</a>
            <a href="{{ path('app_genre_edit', {'id': genre.id}) }}" class="btn-custom">Modifier</a>
        </div>

        <div class="mt-4">
            {{ include('genre/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
