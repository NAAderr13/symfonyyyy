{% extends 'base.html.twig' %}

{% block title %}Edit Genre{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Style professionnel pour la page d'Ã©dition */
        .container {
            max-width: 900px;
            margin-top: 30px;
        }

        h1 {
            text-align: center;
            font-size: 2.5rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 25px;
        }

        .btn {
            padding: 12px 25px;
            font-size: 16px;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 20px;
            transition: all 0.3s ease-in-out;
        }

        .btn:hover {
            opacity: 0.85;
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
            color: white;
        }

        .btn-info:hover {
            background-color: #138496;
            border-color: #117a8b;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
        }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            padding: 12px;
            font-size: 16px;
            border-radius: 4px;
            border: 1px solid #ccc;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            border-color: #80bdff;
            outline: none;
        }

        .back-link {
            font-size: 16px;
            text-decoration: none;
            color: #007bff;
        }

        .back-link:hover {
            text-decoration: underline;
        }

        .delete-form {
            display: inline;
            margin-top: 30px;
        }

        .text-center {
            text-align: center;
        }

    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Edit Genre</h1>

        {{ include('genre/_form.html.twig', {'button_label': 'Update'}) }}

        <div class="text-center mt-4">
            <a href="{{ path('app_genre_index') }}" class="back-link">Back to list</a>
        </div>

        <div class="text-center mt-3">
            {{ include('genre/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
