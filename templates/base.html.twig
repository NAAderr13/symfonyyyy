<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('app_home') }}">Ma Bibliothèque</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item {% if app.request.attributes.get('_route') == 'app_home' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                </li>
                <li class="nav-item {% if app.request.attributes.get('_route') == 'app_livre_index' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('app_livre_index') }}">Livres</a>
                </li>
                <li class="nav-item {% if app.request.attributes.get('_route') == 'app_auteur_index' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('app_auteur_index') }}">Auteurs</a>
                </li>
                <li class="nav-item {% if app.request.attributes.get('_route') == 'genre_index' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('genre_index') }}">Genres</a>
                </li>

                <!-- Ajout du lien vers la page Emprunt -->
                <li class="nav-item {% if app.request.attributes.get('_route') == 'app_emprunt_index' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('app_emprunt_index') }}">Emprunts</a>
                </li>
                
                <!-- Modifier la route pour l'enregistrement -->
                <li class="nav-item {% if app.request.attributes.get('_route') == 'app_register' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
                </li>

                {% if app.user %}
                    <!-- Si l'utilisateur est connecté, afficher "Déconnexion" -->
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                    </li>
                {% else %}
                    <!-- Si l'utilisateur n'est pas connecté, afficher "Connexion" -->
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>


        <!-- Body Content -->
        <div class="container mt-4">
            {% block body %}
            <h1>hello world</h1>
            {% endblock %}
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
